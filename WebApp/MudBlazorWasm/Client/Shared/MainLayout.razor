@using WUW.MicroManagerWasm.MudBlazorApp.Infrastructure.Authorization

@inject IAuthenticationService AuthService

    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudMenu AnchorOrigin="Origin.BottomRight" LockScroll="true" TransformOrigin="Origin.TopRight">
            <ActivatorContent>
                <AuthorizeView>
                    <Authorized>
                        <NameCardAvatar />
                    </Authorized>
                    <NotAuthorized>
                        <MudIconButton Icon="@Icons.Filled.Person" Color="Color.Inherit" />
                    </NotAuthorized>
                </AuthorizeView>
            </ActivatorContent>
            <ChildContent>
                <div class="py-2" style="min-width: 320px">
                    <div class="ma-4">
                        <AuthorizeView>
                            <Authorized>
                                <NameCard Class="mt-n2" Style="margin-bottom:0px!important" />
                                <MudMenuItem>
                                    <div class="d-flex">
                                        <MudIcon Class="mx-2" Icon="@Icons.Material.Filled.Person" />
                                        <MudText>Account</MudText>
                                    </div>
                                </MudMenuItem>
                                <MudButton Color="Color.Error" FullWidth="true" StartIcon="@Icons.Material.Filled.Logout" Variant="Variant.Filled" OnClick="Logout">
                                    Logout
                                </MudButton>
                            </Authorized>
                            <NotAuthorized>
                                <MudButton Color="Color.Primary" FullWidth="true" StartIcon="@Icons.Material.Filled.Login" Variant="Variant.Filled" Link="/login">
                                    Login
                                </MudButton>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                    <MudDivider Class="mb-4" />
                    <div class="d-flex justify-center">
                        <MudLink class="px-2" Href="#" Typo="Typo.caption" Underline="Underline.None">Privacy Policy</MudLink>
                        <MudText>•</MudText>
                        <MudLink class="px-2" Href="#" Typo="Typo.caption" Underline="Underline.None">Terms and Conditions</MudLink>
                    </div>
                </div>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Micro-Manager</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @ChildContent
            <MudScrollToTop TopOffset="400" Style="z-index:2000;">
                <MudFab Icon="@Icons.Material.Filled.KeyboardArrowUp" Color="Color.Primary" />
            </MudScrollToTop>
        </MudContainer>
    </MudMainContent>



