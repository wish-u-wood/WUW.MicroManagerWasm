<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader style="padding:10px!important">
        <CardHeaderAvatar>
            <MudTooltip Text="Account" Delay="600">
                <MudIconButton OnClick="GoToAccount" Class="pa-0 ma-0">
                    <NameCardAvatar @ref="_nameCardAvatar" @bind-FullName="FullNameFromAvatar" @bind-Email="EmailFromAvatar" />
                </MudIconButton>
            </MudTooltip>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1" Class="ml-n3">@FullNameFromAvatar</MudText>
            <MudText Typo="Typo.caption" Class="ml-n3">@EmailFromAvatar</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>


